{
  "name": "@astriel-division/eslint-config",
  "version": "1.0.7",
  "main": "build/index",
  "author": "AstrielDivision",
  "license": "MIT",
  "description": "TypeScript ESLint config for various projects",
  "scripts": {
    "commit": "git-cz",
    "clean": "rimraf ./build && mkdir ./build",
    "build": "yarn clean && tsc -b ./src"
  },
  "devDependencies": {
    "@astriel-division/ts-config": "1.0.5",
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/node": "16.3.3",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.2",
    "rimraf": "3.0.2",
    "standard-version": "9.3.1",
    "ts-node": "10.2.1"
  },
  "engines": {
    "node": ">=15",
    "npm": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AstrielDivision/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/AstrielDivision/eslint-config/issues"
  },
  "files": [
    "build",
    "!build/tsconfig*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint-config-standard-with-typescript": "^21.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0"
  },
  "peerDependencies": {
    "eslint": "^7.32.0",
    "typescript": "^4.3.5"
  }
}
